<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <AssemblyName>VoicevoxEngineSharp.Core</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NumSharp" Version="0.30.0" />
    <PackageReference Include="SharpOpenJTalk.Lang" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(ProjectDir)\..\resources\**" Exclude="$(ProjectDir)\..\resources\.gitkeep" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    <Compile Remove="Acoustic\**\*.cs;Language\**\*.cs;Usecases\**\*.cs" />
  </ItemGroup>

</Project>
